{
	"name": "@sitename/sui",
	"version": "0.0.1",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.1.1",
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@playwright/test": "^1.56.1",
		"@storybook/addon-a11y": "^9.1.13",
		"@storybook/addon-docs": "^9.1.13",
		"@storybook/addon-svelte-csf": "^5.0.10",
		"@storybook/addon-vitest": "^9.1.13",
		"@storybook/sveltekit": "^9.1.13",
		"@sveltejs/adapter-auto": "^6.1.1",
		"@sveltejs/kit": "^2.47.3",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.15",
		"@types/node": "^22.18.12",
		"@vitest/browser": "^3.2.4",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-storybook": "^9.1.13",
		"eslint-plugin-svelte": "^3.12.5",
		"globals": "^16.4.0",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"publint": "^0.3.15",
		"storybook": "^9.1.13",
		"svelte": "^5.41.2",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.15",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"vite": "^7.1.11",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0"
	},
	"keywords": [
		"svelte"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"@easepick/amp-plugin": "^1.2.1",
		"@easepick/core": "^1.2.1",
		"@easepick/lock-plugin": "^1.2.1",
		"@easepick/range-plugin": "^1.2.1",
		"@easepick/time-plugin": "^1.2.1",
		"@floating-ui/dom": "^1.7.4",
		"@thisux/sveltednd": "^0.0.20",
		"daisyui": "^5.3.8",
		"dayjs": "^1.11.18",
		"es-toolkit": "^1.40.0",
		"svelte-sonner": "^1.0.5",
		"wonka": "^6.3.5"
	}
}
